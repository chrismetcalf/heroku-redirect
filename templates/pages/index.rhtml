<div id="posts">
  <div class="post hentry category-general post_box top" id="post-0">
    <div class="headline_area">
      <h1 class="entry-title"><a href="<%= articles.first.permalink %>"><%= articles.first.title %></a></h1>
        <p class="headline_meta">
          <abbr class="published" title="<%= articles.first.date %>"><%= articles.first.date %></abbr> -
          <abbr class="author" title="<%= articles.first.author %>"><%= articles.first.author %></abbr>
        </p>
        <%= partial("tweet", {:url => articles.first.permalink, :text => articles.first.title.gsub(/"/, "")}) %>
    </div>

    <div class="format_text entry-content">
      <%= articles.first.body %>
    </div>
  </div>

  <% for article in articles[1...5] %>
    <div class="post hentry category-general post_box top" id="post-1">
      <div class="headline_area">
        <h1 class="entry-title"><a href="<%= article.path %>"><%= article.title %></a></h1>
        <p class="headline_meta">
          <abbr class="published" title="<%= article.date %>"><%= article.date %></abbr> -
          <abbr class="author" title="<%= article.author %>"><%= article.author %></abbr>
        </p>
        <%= partial("tweet", {:url => article.permalink, :text => article.title.gsub(/"/, "")}) %>
      </div>

      <div class="format_text entry-content">
        <%= article.summary %>
      </div>

      <div class="more"><a href="<%= article.path %>">Read More &raquo;</a></div>
    </div>
  <% end %>
</div>

